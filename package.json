{
  "name": "legalease-service",
  "version": "1.0.0",
  "main": "src/server.ts",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "dev": "nodemon",
    "postinstall": "tsc",
    "build": "tsc && yarn lint",
    "watch-ts": "tsc -w",
    "deploy": "git add . && git commit -m Heroku && git push heroku main",
    "lint": "yarn prettier --write . && eslint . --ext .js,.jsx,.ts,.tsx",
    "script": "cd src/scripts && ts-node",
    "run-tests": "jest --detectOpenHandles",
    "test": "yarn lint && yarn run-tests"
  },
  "engines": {
    "node": "14.16.1",
    "yarn": "^1.22.5"
  },
  "repository": "https://github.com/MatthiasGu/legalease-service.git",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.1",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5"
  }
}